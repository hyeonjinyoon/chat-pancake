    <div class="main-menu"
         style="
                 position: fixed;
                 left: 0px;
                 top: 0px;
                 z-index: 2;
                 height: 100%;
                 float: left;
                 flex-direction: column;
                  display: flex;
                  margin-left: auto; 
                  margin-right: auto;
                  padding-left: 10px;">
